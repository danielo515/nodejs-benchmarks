{
    "env": {
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "no-unused-vars": ["error",{ "argsIgnorePattern": "^_$" }],
        "strict": "error",
        "no-undef": "error",
        "semi": 2,
        "indent": [
            "error",
            4
        ]
    }
}